    <script>
      const form = document.getElementById('issueForm');
      const list = document.getElementById('issueList');
      const msg = document.getElementById('msg');

      const issues = JSON.parse(localStorage.getItem('issues') || '[]');

      function render() {
        list.innerHTML = issues.length
          ? issues
              .map(
                (i) =>
                  `<div class='border p-2 rounded'><b>${i.anon ? 'Anonymous' : i.title}</b><p>${i.desc}</p><small class='text-gray-500'>${new Date(i.time).toLocaleString()}</small></div>`
              )
              .join('')
          : '<p class=\"text-gray-500\">рдЕрднреА рдХреЛрдИ issue рдирд╣реАрдВ рд╣реИ</p>';
      }

      render();

      form.addEventListener('submit', (e) => {
        e.preventDefault();
        const title = document.getElementById('title').value;
        const desc = document.getElementById('desc').value;
        const anon = document.getElementById('anon').checked;
        issues.unshift({ title, desc, anon, time: Date.now() });
        localStorage.setItem('issues', JSON.stringify(issues));
        render();
        msg.classList.remove('hidden');
        setTimeout(() => msg.classList.add('hidden'), 2000);
        form.reset();
      });
    </script>
